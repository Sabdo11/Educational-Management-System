<%= form_with(model: section, local: true) do |form| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
        <% section.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year %>
  </div>

  <div class="field">
    <%= form.label :Semester %>
    <%= collection_select(:section, :semester_id , @semesters, :id, :semester) %>
  </div>


  <div class="field">
    <%= form.label :Course %>
    <%= collection_select(:section, :course_id , @courses, :id, :number) %>
  </div>


  <div class="field">
    <%= form.label :Professor %>
    <%= collection_select(:section, :professor_id , @professors, :id, :name) %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
